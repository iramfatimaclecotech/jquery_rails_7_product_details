<h1>New User</h1>
<div class="container  w">
<%= form_with model: @user do |form| %>
    <div class="form-group">
        <%= form.label :name %><br>
        <%= form.cktext_area :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :details %><br>
        <%= form.cktext_area :details, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :image %><br>
        <%= form.file_field :image,class: "form-control" %><br>
    </div >
    <div class="form-group">
        <%= form.submit class: "btn btn-primary btn-lg" %>
    </div>
<% end %>
</div>

<style>

.w{
    max-width: 700px
}

</style>